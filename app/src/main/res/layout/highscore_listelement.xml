<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/billede_listeelem"
            android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_margin="5dip"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/dato_listeelem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/billede_listeelem"
            android:layout_toEndOf="@+id/billede_listeelem"
            android:layout_toRightOf="@+id/billede_listeelem"
            android:text="Dato"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_listeelem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dato_listeelem"
            android:layout_toRightOf="@+id/billede_listeelem"
            android:text="score"
            android:textSize="12sp" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>